<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="demo.android.mpchart">

    <application
        android:name=".ChartApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MPChartDemo"
        tools:ignore="AllowBackup">
        <activity
            android:name=".barchart.BarChartActivity"
            android:exported="true" />
        <activity
            android:name=".splash.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.MPChartDemo.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".bigdecimal.BigDecimalChartActivity"
            android:exported="true" />
    </application>

</manifest>